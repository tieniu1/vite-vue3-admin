{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "app.d.ts",
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "element-plus/global",
      "node",
      "vite/client"
    ]
  },
  "referencestsconfig.app.json": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}